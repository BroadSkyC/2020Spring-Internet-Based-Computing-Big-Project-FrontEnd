<!--pages/fans.wxml-->
 <view class="row-container">
 <view class="header" >
      <view class="left">
        <view class="bilibili-index-sprite bilibili-index-hot"></view>
        <image class="icon_command" src="../../imageIcon/guanzhu.png"></image>
        <text>我的关注</text>
      </view>
    </view>
<view class='allMessage'>
 <view class='comment-item' wx:for="{{userList}}" wx:key="id" wx:for-index="idx">
            <view class='comment-person'>
            <image class='comment-person-avatar' src='{{item.img}}'></image>
              <view class='comment-person-info ellipsis'>
                <view class='comment-person-name ellipsis'>{{item.name}}</view>
                <view class='comment-time ellipsis'>{{item.fansNum}}粉丝</view>
              </view>
            </view>
          </view>
          </view>
          </view>
